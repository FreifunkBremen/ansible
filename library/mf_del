#!/usr/bin/python

EXAMPLES = '''
# Micro Firewall, saves json-rules for convertion to iptables
- mf_del: role=ssh proto=tcp port=22 interface=eth0 onlyipv6=yes 
- mf_del: role=ssh proto=tcp port=22
'''

#from ansible.constants import mk_boolean
from ansible.module_utils.basic import *
import json
import io
import os

PATH = '/etc/microfirewall.d/'
def main():
	change   = False
	module = AnsibleModule(
		argument_spec={
			'role': {'required': True, 'type': 'str'},
			'proto': {'required': True, 'type': 'str'},
			'port': {'required': True, 'type': 'str'},
			'interface': {'type': 'str'},
			'onlyipv6': {'type': 'bool'},
			'onlyipv4': {'type': 'bool'},
		}
	)
	role = module.params['role']
	proto = module.params['proto']
	port = module.params['port']
	interface = module.params['interface']
	onlyipv6 = module.params['onlyipv6']
	onlyipv4 = module.params['onlyipv4']

	obj = {"proto":proto,"port":port}
	if interface is not None:
		obj["interface"] = interface
	if onlyipv6 is not None:
		obj["onlyipv6"] = onlyipv6
	if onlyipv4 is not None:
		obj["onlyipv4"] = onlyipv4


	if not os.path.exists(PATH):
		os.makedirs(PATH)
	filename = os.path.join(PATH,role+'.json')
	data = []

	# Read role
	if os.path.isfile(filename):
		with open(filename) as data_file:    
			data = json.load(data_file)

	newlist = []
	# Remove rule from role
	for item in data:
		if sorted(item.items()) == sorted(obj.items()):
			change = True
		else:
			newlist.append(item)

	# Write role
	with io.open(filename, 'w', encoding='utf-8') as f:
		f.write(unicode(json.dumps(newlist, ensure_ascii=False)))

	module.exit_json(
		changed=change
	)

main()

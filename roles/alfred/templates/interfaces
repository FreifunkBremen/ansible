# {{ ansible_managed }}

auto {{ alfred_mtu_interface }}
iface {{ alfred_mtu_interface }} inet manual
	pre-up ip link add link {{ alfred_mtu_interface }} name $IFACE address {{ ansible_default_ipv4.macaddress | derive_mac_addr(3) }} type macvtap
	up ip link set up mtu 1280 dev $IFACE
	down ip link set down dev $IFACE
	post-down ip link del $IFACE

#! /usr/bin/env python2

from sys import path
path.append("lib")

import hosts

inv = hosts.Inventory('site/site.conf',
  ipv6_local_network = "fd2f:5119:f2c::/64",
  ipv6_uplink_network = "2a06:8782:ffbb::/64",
  icvpn_ipv4_network = "10.207.0.196/16",
  icvpn_ipv6_network = "fec0::a:cf:0:c4/96",
)

grp = inv.group("vpnservers",
  dhcp=True,
  icvpn=True,
  batman_gateway=True,
  alfred_master=False,
)
grp.host(1, "vpn01.bremen.freifunk.net", exit_ipv4="ipip")
grp.host(2, "vpn02.bremen.freifunk.net", exit_ipv4="openvpn", exit_masquerade=False)
grp.host(3, "vpn03.bremen.freifunk.net", exit_ipv4="default", exit_ipv6_remote=False)
grp.host(4, "vpn04.bremen.freifunk.net", exit_ipv4="gre", ansible_ssh_port=60023)
grp.host(5, "vpn05.bremen.freifunk.net", exit_ipv4="openvpn")
grp.host(6, "vpn06.bremen.freifunk.net", exit_ipv4="default", exit_ipv4_interface="eth0")

grp = inv.group("services")
grp.host(10, "ffhb.sum7.de")

grp = inv.group("webserver")
grp.host(11, "bremen.freifunk.net")

grp = inv.group("dnsserver");
grp.host(0, "dns.bremen.freifunk.net");

grp = inv.group("standardserver")
grp.host(0, "mail.ffhb.de")

print inv.json_dump(indent=4)

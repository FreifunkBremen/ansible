#!/usr/bin/env python2

from sys import path
path.append("lib")

import hosts


config = hosts.Inventory("vpnservers",
  ipv4_network     = "10.196.0.0/17",
  ipv6_network     = "fd2f:5119:f2c::/64",
  ipv6_network_alt = "2001:bf7:540::/64",
)

config.host(1, "vpn01.bremen.freifunk.net", port=60023)
config.host(2, "vpn02.bremen.freifunk.net")
config.host(3, "vpn03.bremen.freifunk.net")
config.host(6, "vpn06.bremen.freifunk.net")
config.host(10, "ffhb.fireorbit.de")


print config.json_dump()
